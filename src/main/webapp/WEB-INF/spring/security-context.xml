	</security:http>
	
	<!-- 강의실 예약 메뉴 -->	
	<security:http pattern="/lectureRoom/**" use-expressions="true"> <!-- use-expressions="true" : spEL문법 사용 -->
		<security:intercept-url pattern="/lectureRoom/**" access="isAuthenticated()" />  		
		<security:intercept-url pattern="/**" access="permitAll"/>	
		
		<security:form-login
